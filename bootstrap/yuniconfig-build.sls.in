(library (yuniconfig build)
         (export yuniconfig-platform
                 yuniconfig-platform-stubdir
                 yuniconfig-platform-stubdirname
                 yuniconfig-loader-rootpath
                 yuniconfig-runtime-rootpath
                 yuniconfig-executable-path)
         (import (yuni scheme))

;;

(define (yuniconfig-loader-rootpath) "@YUNILOADERROOTPATH@")
(define (yuniconfig-runtime-rootpath) "@YUNIRUNTIMEROOTPATH@")
(define (yuniconfig-platform) "@YUNIPLATFORM@")
(define (yuniconfig-platform-stubdir) "@YUNIPLATFORMSTUBDIR@")
(define (yuniconfig-platform-stubdirname) "@YUNIPLATFORMSTUBDIRNAME@")
(define (yuniconfig-executable-path sym)
  (let ((x (%yuniconfig-executable-path0 sym)))
   (and (string? x)
        (not (string=? x "UNKNOWN"))
        x)))
(define (%yuniconfig-executable-path0 sym)
  (case sym
    ((chez)
     "@YUNICONFIGCHEZ_SCHEME@")
    ((chibi-scheme)
     "@YUNICONFIGCHIBI_SCHEME@")
    ((chicken)
     "@YUNICONFIGCHICKEN@")
    ((gambit)
     "@YUNICONFIGGAMBIT@")
    ((gauche)
     "@YUNICONFIGGAUCHE@")
    ((guile)
     "@YUNICONFIGGUILE@")
    ((ironscheme)
     "@YUNICONFIGIRON_SCHEME@")
    ((kawa)
     "@YUNICONFIGKAWA@")
    ((larceny)
     "@YUNICONFIGLARCENY@")
    ((mit-scheme)
     "@YUNICONFIGMIT_SCHEME@")
    ((nmosh)
     "@YUNICONFIGNMOSH@")
    ((picrin)
     "@YUNICONFIGPICRIN@")
    ((racket)
     "@YUNICONFIGRACKET@")
    ((sagittarius)
     "@YUNICONFIGSAGITTARIUS@")
    ((vicare)
     "@YUNICONFIGVICARE@")
    (else #f)))
)
